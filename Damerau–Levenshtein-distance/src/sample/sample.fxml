          xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10">
    <children>
        <Label text="First String" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <TextField fx:id="textfield1"
                GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="Second String" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <TextField fx:id="textfield2"
                GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <Button text="Calculate Distance" GridPane.columnIndex="1" GridPane.rowIndex="7"
                onAction="#handleButtonAction"/>
        <Text  GridPane.columnIndex="1" GridPane.rowIndex="9"/>
        <TextArea fx:id="actiontarget" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
    </children>
</GridPane>